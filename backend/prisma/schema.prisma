generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modelo de usu√°rio
model Users {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
  type     String @db.Char(1)

  @@map("users")
}

model Events {
  id          String   @id @default(uuid())
  date        DateTime
  time        DateTime
  description String
  createdAt   DateTime @default(now()) @map("created_at")

  @@map("events")
}

model MessageUser {
  id         String    @id @default(uuid())
  email      String    @unique
  sent       Message[] @relation("SentMessages", fields: [id], references: [senderId])
  received   Message[] @relation("ReceivedMessages", references: [id])
}

model Message {
  id          String         @id @default(uuid())
  title       String         @db.VarChar(150)
  content     String
  senderId    String
  sender      MessageUser    @relation("SentMessages", fields: [senderId], references: [id])
  recipients  MessageUser[]  @relation("MessageRecipients", references: [id])
  createdAt   DateTime       @default(now())
  readBy      String[]       @default([])
}